<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
            <title>{% block title %}{{ entry.seoTitle is defined ? entry.seoTitle : app['site.title'] }}{% endblock title %}</title>
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            {% if description is defined %}
                <meta name="Description" content="{{ description }}">
            {% elseif app['site.meta_description'] is defined %}
                <meta name="Description" content="{{ app['site.meta_description'] }}">
            {% endif %}
            <meta name="author" content="{{ app['site.author'] }}">
            <link rel="stylesheet" href="/assets/css/styles.css">
            <!--[if lt IE 9]><script src="/assets/vendor/html5shiv/dist/html5shiv.min.js"></script><![endif]-->
        {% endblock head %}
    </head>
    <body>
        <header id="site-header">
            {% block header %}
                <p id="site-title"><a href="{{ url('home') }}">{{ app['site.title'] }}</a></p>
                <p id="site-tagline">{{ app['site.tagline'] }}</p>
            {% endblock header %}
        </header>
        {% block content %}
        {% endblock content %}
        <footer id="site-footer">
            {% block footer %}
                {% block scripts %}
                    <script>
                        var _gaq=[['_setAccount','{{ app['site.ga_tracking_id'] }}'],['_trackPageview']];
                        (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
                        g.src='//www.google-analytics.com/ga.js';
                        s.parentNode.insertBefore(g,s)}(document,'script'));
                    </script>
                {% endblock scripts %}
            {% endblock footer %}
        </footer>
    </body>
</html>